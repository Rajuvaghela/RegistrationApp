<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
    </style>

    <style name="BtnMoreStyle" parent="BtnBaseMoreStyle">
        <!--<isareeNamename="android:paddingEnd">@dimen/activity_horizontal_margin</item>-->
        <!--<isareeNamename="android:layout_marginStart">@dimen/negative_margin</item>-->
    </style>

    <style name="SimpleButton" parent="Base.SimpleButton">
        <item name="android:paddingEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingStart">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="HomeItemHeaderStyle">
        <item name="android:paddingStart">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/top_bottom_padding</item>
    </style>

    <style name="ContactItemPadding">
        <item name="android:paddingStart">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/view_between_margin</item>
        <item name="android:paddingBottom">@dimen/view_between_margin</item>
    </style>

    <style name="marginLeftRightStyle">
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="marginLeftRightStyleTen">
        <item name="android:layout_marginEnd">@dimen/common_10_dp</item>
        <item name="android:layout_marginStart">@dimen/common_10_dp</item>
    </style>

    <style name="paddingCommonFiveStyle" parent="paddingTopBottomFiveStyle">
        <item name="android:paddingStart">@dimen/common_5_dp</item>
        <item name="android:paddingEnd">@dimen/common_5_dp</item>

    </style>

    <style name="paddingCommonFifteenStyle">
        <item name="android:paddingStart">@dimen/common_15_dp</item>
        <item name="android:paddingEnd">@dimen/common_15_dp</item>
        <item name="android:paddingTop">@dimen/common_15_dp</item>
        <item name="android:paddingBottom">@dimen/common_15_dp</item>
    </style>
</resources>
