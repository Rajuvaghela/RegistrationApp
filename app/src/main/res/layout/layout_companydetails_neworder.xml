<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:id="@+id/llContactDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/txtNewOrderNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_10_dp"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/h4">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edtNewOrderNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_5_dp"
                    android:hint="@string/order_no"
                    android:inputType="text"
                    android:lines="1"
                    android:text="@string/autogenerated"
                    android:textColor="@color/gray_400"
                    android:singleLine="true"
                    android:textSize="@dimen/h4" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txtNewOrdrDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_10_dp"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/h4">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edtNewOrderDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_5_dp"
                    android:hint="@string/order_date"
                    android:inputType="text"
                    android:lines="1"
                    android:text="@string/autogenerated"
                    android:enabled="false"
                    android:textColor="@color/gray_400"
                    android:singleLine="true"
                    android:textSize="@dimen/h4" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/flCompanyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_10_dp">

            <com.xtensolution.kptt.custom.MyAutoCompleteTextView
                android:id="@+id/actCompanyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Name"
                android:imeOptions="flagNoExtractUi|actionSearch"
                android:inputType="textCapSentences"
                android:paddingEnd="@dimen/common_10_dp"
                android:paddingRight="@dimen/common_10_dp" />

            <ProgressBar
                android:id="@+id/pb_loading_indicator_company"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right|end"
                android:layout_marginEnd="@dimen/common_10_dp"
                android:layout_marginRight="@dimen/common_10_dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtAddCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|end"
                android:background="@drawable/ic_pluse_s" />
        </FrameLayout>

        <TextView
            android:id="@+id/txtLabelCompanyDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_10_dp"
            android:text="@string/company_details"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/h3"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_05_dp"
            android:background="@color/gray_400"
            android:layout_marginTop="@dimen/common_10_dp" />

        <TextView
            android:id="@+id/txtCompanyDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_10_dp"
            android:layout_marginTop="@dimen/common_10_dp"
            android:textColor="@color/black"
            android:textSize="@dimen/h3" />

    </LinearLayout>
</android.support.v7.widget.CardView>
