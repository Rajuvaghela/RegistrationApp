<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        style="@style/common_margin">


        <TextView
            android:id="@+id/txtFirstStep"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:text="1"
            android:paddingLeft="@dimen/_11sdp"
            android:paddingRight="@dimen/_12sdp"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:textColor="@color/black"
            android:background="@drawable/round_shape_white_stape"
            android:textSize="@dimen/_12sdp" />

        <View
            android:layout_width="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@color/black"
            android:layout_height="@dimen/_1sdp">

        </View>

        <TextView
            android:id="@+id/txtSecondStep"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:text="2"
            android:paddingLeft="@dimen/_11sdp"
            android:paddingRight="@dimen/_12sdp"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:textColor="@color/white"
            android:background="@drawable/round_shape_purple_green_stape"
            android:textSize="@dimen/_12sdp" />
        <View
            android:layout_width="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@color/black"
            android:layout_height="@dimen/_1sdp"/>

        <TextView
            android:id="@+id/txtThirdStep"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:text="3"
            android:paddingLeft="@dimen/_11sdp"
            android:paddingRight="@dimen/_12sdp"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:textColor="@color/black"
            android:background="@drawable/round_shape_white_stape"
            android:textSize="@dimen/_12sdp" />

        <View
            android:layout_width="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@color/black"
            android:layout_height="@dimen/_1sdp"/>

        <TextView
            android:id="@+id/txtFourthStep"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:text="4"
            android:paddingLeft="@dimen/_11sdp"
            android:paddingRight="@dimen/_12sdp"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:textColor="@color/black"
            android:background="@drawable/round_shape_white_stape"
            android:textSize="@dimen/_12sdp" />





    </LinearLayout>

</LinearLayout>