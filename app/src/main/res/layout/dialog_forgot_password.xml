<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtLabelForgotPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_clear_black"
                android:drawableRight="@drawable/ic_clear_black"
                android:gravity="center"
                android:padding="@dimen/common_10_dp"
                android:text="@string/forgot_password"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/h3" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_05_dp"
                android:background="@color/colorDisableText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_16_dp"
                android:text="@string/forgot_pass_text"
                android:textSize="@dimen/h5" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilEnterMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_30_dp"
                android:padding="@dimen/common_16_dp"
                android:hint="Registered Mobile No">


                <EditText
                    android:id="@+id/edtMobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/common_16_dp"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/h4" />
            </android.support.design.widget.TextInputLayout>


            <ImageView
                android:id="@+id/imgNextBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@drawable/selector_icon_next"
                android:clickable="true"
                android:gravity="center"
                android:padding="@dimen/common_15_dp" />
        </LinearLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>