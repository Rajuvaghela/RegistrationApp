            android:id="@+id/txtCustomerDetailsaddcontact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/common_20_dp"
            android:layout_marginTop="@dimen/common_10_dp"
            android:paddingTop="@dimen/common_5_dp"
            android:paddingBottom="@dimen/common_5_dp"
            android:paddingLeft="@dimen/common_10_dp"
            android:paddingStart="@dimen/common_10_dp"
