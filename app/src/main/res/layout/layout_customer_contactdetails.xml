                android:src="@drawable/ic_call_shap" />

            <TextView
                android:id="@+id/txtCustomerDetailsContactMobile"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtCustomerDetailsContactphone"
                android:layout_marginTop="@dimen/common_16_dp"
                android:text="@string/mobile_no"
                android:layout_marginLeft="@dimen/common_35_dp"
                android:textSize="@dimen/h4" />

            <!--<TextView
                android:id="@+id/txtCustomerDetailsContactMobile"
