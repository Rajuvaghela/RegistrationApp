<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:ignore="NamespaceTypo"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/txtCustomerDetailsContactTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_10_dp"
                android:text="@string/other_contacts"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/h3"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgMoreOptionsCustomerOtherDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_10_dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_more_shape">

            </ImageView>

            <ImageView
                android:id="@+id/imgContactEmail"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/common_20_dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtCustomerDetailsContactTitle"
                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_userr" />

            <TextView
                android:id="@+id/txtCustomerDetailsContactName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/txtCustomerDetailsContactTitle"
                android:layout_marginTop="@dimen/common_20_dp"
                android:text="User Name"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_35_dp"
                android:layout_toEndOf="@id/imgContactEmail"
                android:layout_toRightOf="@id/imgContactEmail"
                android:textSize="@dimen/h4" />

            <ImageView
                android:id="@+id/imgContactEmails"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/common_16_dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtCustomerDetailsContactName"
                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_mail" />


            <TextView
                android:id="@+id/txtCustomerDetailsContactEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_below="@id/txtCustomerDetailsContactName"
                android:layout_marginTop="@dimen/common_16_dp"
                android:text="Email"
                android:layout_marginLeft="@dimen/common_35_dp"
                android:textSize="@dimen/h4" />

            <ImageView
                android:id="@+id/imgContactPhonee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/common_16_dp"
                android:layout_below="@id/txtCustomerDetailsContactEmail"
                android:background="@drawable/simple_blue_ripple"
                android:src="@drawable/ic_call_shap" />

            <TextView
                android:id="@+id/txtCustomerDetailsContactphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_35_dp"
                android:layout_below="@id/txtCustomerDetailsContactEmail"
                android:layout_marginTop="@dimen/common_16_dp"
                android:text="@string/work_phone"
                android:textSize="@dimen/h4" />

            <!--<TextView
                android:id="@+id/txtCustomerDetailsContactphone"
