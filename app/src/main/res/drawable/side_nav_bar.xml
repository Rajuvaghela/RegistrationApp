<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="0dp"
        android:end="0dp"
        android:left="0dp"
        android:right="0dp"
        android:start="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shadow_with_opacity_5" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/border_width"
        android:end="0dp"
        android:left="0dp"
        android:right="0dp"
        android:start="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shadow_with_opacity_10" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:end="0dp"
        android:left="0dp"
        android:right="0dp"
        android:start="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shadow_with_opacity_15" />
        </shape>
    </item>
    <item
        android:bottom="1.5dp"
        android:end="0dp"
        android:left="0dp"
        android:right="0dp"
        android:start="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shadow_with_opacity_20" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:end="0dp"
        android:left="0dp"
        android:right="0dp"
        android:start="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/btn_pressed_color" />
        </shape>
    </item>
    <item
        android:bottom="2.5dp"
        android:end="0dp"
        android:left="0dp"
        android:right="0dp"
        android:start="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:centerColor="@color/colorPrimary"
                android:endColor="@color/colorAccent"
                android:startColor="@color/colorAccent"
                android:type="linear" />
        </shape>
    </item>
</layer-list>