<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="0dp"
        android:end="0dp"
        android:left="0dp"
        android:right="0dp"
        android:start="0dp"
        android:top="0dp">
        <shape android:shape="oval">
            <solid android:color="@color/shadow_with_opacity_5" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/border_width"
        android:end="@dimen/border_width"
        android:left="@dimen/border_width"
        android:right="@dimen/border_width"
        android:start="@dimen/border_width"
        android:top="@dimen/border_width">
        <shape android:shape="oval">
            <solid android:color="@color/shadow_with_opacity_10" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:end="1dp"
        android:left="1dp"
        android:right="1dp"
        android:start="1dp"
        android:top="1dp">
        <shape android:shape="oval">
            <solid android:color="@color/shadow_with_opacity_15" />
        </shape>
    </item>
    <item
        android:bottom="1.5dp"
        android:end="1.5dp"
        android:left="1.5dp"
        android:right="1.5dp"
        android:start="1.5dp"
        android:top="1.5dp">
        <shape android:shape="oval">
            <solid android:color="@color/shadow_with_opacity_20" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:end="2dp"
        android:left="2dp"
        android:right="2dp"
        android:start="2dp"
        android:top="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/btn_pressed_color" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/padding_4dp"
        android:end="@dimen/padding_4dp"
        android:left="@dimen/padding_4dp"
        android:right="@dimen/padding_4dp"
        android:start="@dimen/padding_4dp"
        android:top="@dimen/padding_4dp">
        <shape android:shape="oval">
            <stroke android:dashGap="2dp" android:width="3dp"
                android:dashWidth="@dimen/activity_horizontal_margin"
                android:color="@color/colorAccent"/>
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>