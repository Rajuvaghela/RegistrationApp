<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/white">
    <item>
        <selector>
            <!--When got error -->
            <item android:state_activated="true">
                <shape
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">

                    <solid
                        android:color="@color/purpale_green" />

                    <size
                        android:width="445dp"
                        android:height="50dp" />

                    <stroke
                        android:width="2dp"
                        android:color="#4dFFFFFF" />

                    <corners
                        android:radius="100dp" />

                </shape>
            </item>

            <!--On Success -->
            <item android:state_selected="true">
                <shape
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">

                    <solid
                        android:color="@color/purpale_green" />

                    <size
                        android:width="445dp"
                        android:height="50dp" />

                    <stroke
                        android:width="2dp"
                        android:color="#4dFFFFFF" />

                    <corners
                        android:radius="100dp" />

                </shape>
            </item>

            <!--Starting progress-->
            <item android:state_enabled="false">
                <shape
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">

                    <solid
                        android:color="@android:color/darker_gray" />

                    <size
                        android:width="445dp"
                        android:height="50dp" />

                    <stroke
                        android:width="2dp"
                        android:color="#4dFFFFFF" />

                    <corners
                        android:radius="100dp" />

                </shape>
            </item>

            <!-- Stop progress and re-activated -->
            <item android:state_enabled="true">
                <shape
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">

                    <solid
                        android:color="@color/purpale_green" />

                    <size
                        android:width="445dp"
                        android:height="50dp" />

                    <stroke
                        android:width="2dp"
                        android:color="#4dFFFFFF" />

                    <corners
                        android:radius="100dp" />

                </shape>
            </item>

            <!--Default background-->
            <item>
                <shape
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">

                    <solid
                        android:color="@android:color/transparent" />

                    <size
                        android:width="445dp"
                        android:height="50dp" />

                    <stroke
                        android:width="1dp"
                        android:color="#4dFFFFFF" />

                    <corners
                        android:radius="100dp" />

                </shape>
            </item>

        </selector>
    </item>
</ripple>