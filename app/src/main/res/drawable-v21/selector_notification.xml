<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?attr/colorAccent">
    <item>
        <selector>
            <item android:state_selected="true">
                <layer-list>
                    <item android:id="@+id/selected_indicator">
                        <shape android:shape="rectangle">
                            <solid android:color="?attr/colorPrimary" />
                        </shape>
                    </item>
                    <item
                        android:left="@dimen/padding_5dp"
                        android:start="@dimen/padding_5dp">
                        <shape android:shape="rectangle">
                            <solid android:color="@color/white" />
                        </shape>
                    </item>
                    <item>
                        <shape android:shape="rectangle">
                            <solid android:color="@color/colorItemSelector" />
                        </shape>
                    </item>
                </layer-list>
            </item>

            <item>
                <layer-list>
                    <item android:id="@+id/default_indicator">
                        <shape android:shape="rectangle">
                            <solid android:color="@color/colorPrimaryRedTheme" />
                        </shape>
                    </item>
                    <item
                        android:left="@dimen/padding_5dp"
                        android:start="@dimen/padding_5dp">
                        <shape android:shape="rectangle">
                            <solid android:color="@color/white" />
                        </shape>
                    </item>
                </layer-list>
            </item>
        </selector>
    </item>
</ripple>