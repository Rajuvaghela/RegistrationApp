<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/white">
    <item>
        <selector>
            <!--When got error -->
            <item android:state_activated="true">
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">
                    <solid android:color="@color/red" />
                    <corners android:radius="@dimen/common_100_dp" />

                    <padding
                        android:bottom="1.75dp"
                        android:left="@dimen/common_5_dp"
                        android:right="@dimen/common_5_dp"
                        android:top="1.75dp" />

                </shape>
            </item>

            <!--On Success -->
            <item android:state_selected="true">
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">
                    <solid android:color="@color/color_green_qb" />
                    <corners android:radius="@dimen/common_100_dp" />
                    <padding
                        android:bottom="1.75dp"
                        android:left="@dimen/common_5_dp"
                        android:right="@dimen/common_5_dp"
                        android:top="1.75dp" />

                </shape>
            </item>

            <!--Starting progress-->
            <item android:state_enabled="false">
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">
                    <solid android:color="@color/text_color_dark_grey" />
                    <corners android:radius="@dimen/common_100_dp" />
                    <padding
                        android:bottom="1.75dp"
                        android:left="@dimen/common_5_dp"
                        android:right="@dimen/common_5_dp"
                        android:top="1.75dp" />

                </shape>
            </item>

            <!-- Stop progress and re-activated -->
            <item android:state_enabled="true">
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">
                    <solid android:color="@android:color/darker_gray" />
                    <corners android:radius="@dimen/btnRadius" />
                    <padding
                        android:bottom="1.75dp"
                        android:left="@dimen/common_5_dp"
                        android:right="@dimen/common_5_dp"
                        android:top="1.75dp" />
                </shape>
            </item>

            <!--Default background-->
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">
                    <solid android:color="@android:color/darker_gray" />
                    <corners android:radius="@dimen/common_100_dp" />
                    <gradient
                        android:angle="270"
                        android:startColor="#776a49 "
                        android:endColor=" #cfa12e "
                        />
                    <padding
                        android:bottom="1.75dp"
                        android:left="@dimen/common_5_dp"
                        android:right="@dimen/common_5_dp"
                        android:top="1.75dp" />

                </shape>
            </item>

        </selector>
    </item>
</ripple>